{
	"name": "forms",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"workspaces": [
		"apps/*",
		"libs/*"
	],
	"scripts": {
		"prepare": "husky",
		"format": "biome check --write",
		"all:build": "pnpm --filter './apps/**' --filter=!./apps/_template run build",
		"all:dev": "pnpm --filter './apps/**' --filter=!./apps/_template run dev",
		"builder:dev": "pnpm --filter @forms/builder run dev",
		"builder:build": "pnpm --filter @forms/builder run build",
		"builder:rsdoctor": "pnpm --filter @forms/builder run rsdoctor",
		"builder:bundle-analyzer": "pnpm --filter @forms/builder run bundle-analyzer",
		"form:dev": "pnpm --filter @forms/form run dev",
		"form:build": "pnpm --filter @forms/form run build",
		"form:rsdoctor": "pnpm --filter @forms/form run rsdoctor",
		"form:bundle-analyzer": "pnpm --filter @forms/form run bundle-analyzer"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.1.0",
		"@dnd-kit/modifiers": "^7.0.0",
		"@dnd-kit/sortable": "^8.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@forms/shared": "workspace:*",
		"@instantdb/react": "^0.10.29",
		"@mantine/core": "^7.11.0",
		"@mantine/hooks": "^7.11.0",
		"@tabler/icons-react": "^3.7.0",
		"lodash": "^4.17.21",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"wouter": "^3.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@rsbuild/core": "^1.0.0-alpha.5",
		"@rsbuild/plugin-react": "^1.0.0-alpha.5",
		"@rsbuild/plugin-source-build": "^1.0.0-alpha.5",
		"@rsbuild/plugin-type-check": "^1.0.0-alpha.5",
		"@rsdoctor/rspack-plugin": "^0.3.7",
		"@types/lodash": "^4.17.6",
		"@types/node": "^20.14.10",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"dependency-cruiser": "^16.3.4",
		"husky": "^9.0.11",
		"postcss": "^8.4.38",
		"postcss-preset-mantine": "^1.15.0",
		"postcss-simple-vars": "^7.0.1",
		"typescript": "^5.5.3"
	}
}
