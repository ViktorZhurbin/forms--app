{
  "name": "forms",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prepare": "husky",
    "format": "biome check --write",
    "all:build": "pnpm --filter './apps/**' --filter=!./apps/_template run build",
    "all:dev": "pnpm --filter './apps/**' --filter=!./apps/_template run dev",
    "builder:dev": "pnpm --filter @forms/builder run dev",
    "builder:build": "pnpm --filter @forms/builder run build",
    "builder:rsdoctor": "pnpm --filter @forms/builder run rsdoctor",
    "builder:bundle-analyzer": "pnpm --filter @forms/builder run bundle-analyzer",
    "form:dev": "pnpm --filter @forms/form run dev",
    "form:build": "pnpm --filter @forms/form run build",
    "form:rsdoctor": "pnpm --filter @forms/form run rsdoctor",
    "form:bundle-analyzer": "pnpm --filter @forms/form run bundle-analyzer"
  },
  "devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@rsbuild/core": "^1.0.1-beta.3",
    "@types/node": "^20.14.10",
    "dependency-cruiser": "^16.3.4",
    "husky": "^9.0.11",
    "typescript": "^5.5.3"
  }
}
