{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["apps/**/src/**/*", "apps/**/app/**/*", "libs/**/src/**/*"],
		"ignore": ["*.astro", ".next/**/*", "entry.*.tsx"],
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"useHookAtTopLevel": "error"
			},
			"style": {
				"useImportType": "warn"
			}
		}
	}
}
