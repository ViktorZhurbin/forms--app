{
  "name": "forms",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prepare": "husky",
    "format": "biome check --write",
    "all:build": "pnpm --filter './apps/**' build",
    "all:dev": "pnpm --filter './apps/**' dev",
    "builder:dev": "pnpm --filter @forms/builder dev",
    "builder:build": "pnpm --filter @forms/builder build",
    "builder:rsdoctor": "pnpm --filter @forms/builder rsdoctor",
    "builder:bundle-analyzer": "pnpm --filter @forms/builder bundle-analyzer",
    "form:dev": "pnpm --filter @forms/form dev",
    "form:build": "pnpm --filter @forms/form build",
    "form:rsdoctor": "pnpm --filter @forms/form rsdoctor",
    "form:bundle-analyzer": "pnpm --filter @forms/form bundle-analyzer",
    "web:dev": "pnpm --filter @forms/website dev",
    "web:build": "pnpm --filter @forms/website build"
  },
  "devDependencies": {
		"@biomejs/biome": "1.8.3",
    "@types/node": "^20.14.10",
    "dependency-cruiser": "^16.3.4",
    "husky": "^9.0.11",
    "typescript": "^5.5.3"
  }
}
