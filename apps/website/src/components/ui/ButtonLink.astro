---
interface Props {
	href: string;
	class?: string;
	target?: string;
}

const { href, target = "_blank", class: className, ...rest } = Astro.props;
---

<a
	type="button"
	role="button"
	{...rest}
	href={href}
	target="_blank"
	class:list={[className]}
>
	<slot />
</a>

<style>
	a {
		margin: 0;
	}
</style>
